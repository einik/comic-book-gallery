@model ComicBookGallery.Models.ComicBook
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;

   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>@Model.SeriesTitle</h1>
        <h2>Issue #@Model.IssueNumber</h2>
        <h5>Description:</h5>
        <div>@Html.Raw(Model.DescriptionHtml)</div>
        @if (Model.Artists.Length > 0)
        {
            <ul>
            <h5>Artists</h5>
            <div>@foreach (var item in Model.Artists)
            { <li>@item.Role: u@item.Name </li>}
            </div>
            </ul>
        }
    </div>
</body>
</html>
